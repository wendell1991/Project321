<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CreditsActivity" >

    <ScrollView
        android:id="@+id/creditsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" >

        <LinearLayout
            android:id="@+id/creditsLayout"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/creditsImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/creditssatish" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/tapMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/creditsView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="92dp"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        android:text="@string/tapReturn" />

</RelativeLayout>