<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/othertopicbackground" >
    
	<TextView
	    android:id="@+id/selectothertopic"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="15dp"	
        android:layout_centerHorizontal="true"    
	    android:text="@string/selecttopic" />
    
    <FrameLayout
        android:id="@+id/selectothertopiclayout"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"    
        android:layout_below="@id/selectothertopic"
         >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:background="#00000000"
            android:layout_height="wrap_content" >
        </ListView>
    </FrameLayout>

    <Button
        android:id="@+id/selectothertopicback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectothertopiclayout"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"    	    
        android:text="@string/Back" />
</RelativeLayout>
