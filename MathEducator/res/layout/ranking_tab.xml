<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/topicSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/quizSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/topicSpinner" />

    <TableLayout
        android:id="@+id/rankTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/quizSpinner"
        android:layout_marginLeft="162dp"
        android:layout_marginTop="30dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankView"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="@string/rank" />

            <TextView
                android:id="@+id/nameView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/name" />

            <TextView
                android:id="@+id/resultView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankOne"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rankOneName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/firstResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankTwo"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rankTwoName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/secondResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankThree"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rankThreeName"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="@string/noResult" />

            <TextView
                android:id="@+id/thirdResult"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankFour"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rankFourName"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fourthResult"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:visibility="invisible" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankFive"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/rankFiveName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/fifthResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />
        </TableRow>
    </TableLayout>

</RelativeLayout>