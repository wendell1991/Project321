<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Spinner
        android:id="@+id/quizSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/topicSpinner"
        android:layout_below="@+id/topicSpinner"
        android:layout_marginTop="19dp" />

    <TextView
        android:id="@+id/quizLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quizSpinner"
        android:layout_toLeftOf="@+id/topicSpinner"
        android:text="@string/quiz"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/topicLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="164dp"
        android:layout_marginTop="70dp"
        android:text="@string/topic"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Spinner
        android:id="@+id/topicSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/topicLabel"
        android:layout_marginLeft="36dp"
        android:layout_toRightOf="@+id/topicLabel" />

    <TableLayout
        android:id="@+id/rankTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quizLabel"
        android:layout_centerVertical="true" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/rankView"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:text="@string/rank" />

            <TextView
                android:id="@+id/nameView"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/name" />
          
            <TextView
                android:id="@+id/resultView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/result" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/rankOne"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/rankOneName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
          
            <TextView
        		android:id="@+id/firstResult"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/rankTwo"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/rankTwoName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
          
            <TextView
        		android:id="@+id/secondResult"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="TextView" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankFour"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/rankThreeName"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/thirdResult"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="TextView" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/rankFour"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/rankFourName"
                android:layout_width="150dp"
                android:layout_height="20dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/fourthResult"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="TextView" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            
            <TextView
                android:id="@+id/rankFive"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/rankFiveName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="TextView" />
          
            <TextView
        		android:id="@+id/fifthResult"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="TextView" />
        </TableRow> 
    </TableLayout>

</RelativeLayout>